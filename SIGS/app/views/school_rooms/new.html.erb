<%= form_for @school_room, url: school_rooms_create_path do |school_room| %>

  <%= school_room.label :name, "Nome da Turma" %>
  <%= school_room.text_field :name, class: 'form-control' %>
  <p> Disciplina </p>
  <%= school_room.collection_select(:discipline_id,Discipline.all,:id,:name, include_blank: true)%>

  <p> Cursos </p>
  <%= school_room.collection_check_boxes(:course_ids,Course.all,:id,:name, include_blank: true)%>

  <%= school_room.submit "Salvar", class: 'pull-right btn btn-default btn-success' %>
<% end %>
