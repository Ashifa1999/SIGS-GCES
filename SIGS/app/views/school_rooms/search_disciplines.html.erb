<%= link_to 'Voltar', school_rooms_index_path, class: ' pull-right btn btn-default btn-success' %>

<% if @disciplines.present? %>

	<h1> Disciplinas encontradas: </h1>
	<table class="table table-hover">
    <tr>
      <th>Nome</th>
      <th>Disciplina</th>
      <th>Cursos</th>
      <th>Capacitadade</th>
      <th style="text-align:center">Alterar</th>
      <th style="text-align:center">Visualizar</th>
      <th style="text-align:center">Excluir</th>
    </tr>
    <% @school_rooms.each do |school_room| %>
      <tr>
        <td><%= school_room.name %></td>
        <td><%= school_room.discipline.name %></td>
        <td>
          <% school_room.course.each do |course| %>
            <%= course.name %> <br>
          <% end %>
        </td>
        <td><%= school_room.capacity %></td>
        <td style="text-align:center"><%= link_to image_tag("icon_edit.png"), school_rooms_edit_path(school_room.id) %></td>
        <td style="text-align:center"><%= link_to image_tag("icon_view.png", id: 'icon_visualizar'+school_room.name), school_rooms_show_path(school_room.id) %></td>
        <td style="text-align:center">
          <%= link_to image_tag("icon_trash.png"), delete_path(school_room.id), method: "delete", data: {confirm: "Esta ação não poderá mais ser desfeita. Tem certeza que deseja continuar?"} %>
        </td>
      </tr>
    <% end %>
  </table>

<% else %>
	<h2> Nenhuma disciplina encontrada. </h2>
<% end %>
