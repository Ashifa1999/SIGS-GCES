<h1>Criar Usuário de API</h1>

<%= form_for @api_user, url: api_users_create_path , method: :post do |api_user| %>
  <%= api_user.label :name , 'Nome' %>
  <%= api_user.text_field :name %>

  <%= api_user.label :email , 'E-mail' %>
  <%= api_user.text_field :email %>

  <%= api_user.submit 'Criar Usuário', class: 'pull-right btn btn-default btn-success' %>
<% end %>
