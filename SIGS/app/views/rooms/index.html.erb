<h1>Salas</h1>
<% if @rooms.count == 0 %>
  <h3>Não há salas registradas no momento.</h3>
<% else %>
  <table class="table table-hover">
    <tr>
      <td>Código</td>
      <td>Nome</td>
      <td>Ativo</td>
      <td>Prédio</td>
      <td style="text-align:center">Visualizar</td>
      <td style="text-align:center">Alterar</td>
      <td style="text-align:center">Excluir</td>
    </tr>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.code %></td>
        <td><%= room.name %></td>
        <td><%=  ((room.active) ? 'Sim' : 'Não')  %></td>
        <td><%= room.building.name %></td>
        <td style="text-align:center"><%= link_to image_tag("icon_view.png"), room_path(room.id) %></td>
        <td style="text-align:center"><%= link_to image_tag("icon_edit.png"), room_edit_path(room.id) %></td>
        <td style="text-align:center"><%= link_to image_tag("icon_trash.png"), destroy_room_path(room.id), data: {confirm: "Esta ação não poderá mais ser desfeita. Tem certeza que deseja continuar?"} %></td>
      </tr>
    <% end %>
<% end %>
</table>
