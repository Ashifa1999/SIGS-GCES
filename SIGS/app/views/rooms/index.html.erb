<h1>Salas</h1>

<% if @rooms.count == 0 %>
  <h3>Não há salas registradas no momento.</h3>
<% else %>
  <table class="table table-hover">
<%= form_tag(room_index_post_path, :method => :post) do %>
  <%= text_field_tag 'name', nil, placeholder: 'Digite o nome da sala...', size: '50', class: 'form-control' %>
  <%= text_field_tag 'code', nil, placeholder: 'Digite o código da sala...', size: '50', class: 'form-control' %>
  <%= number_field_tag 'capacity', nil, placeholder: 'Digite a quantidade de vagas...', size: '300', class: 'form-control' %>
  <%= submit_tag "Submit"%>
<% end %>

