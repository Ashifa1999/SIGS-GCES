<div class="login-form">
  <div><figure><%= image_tag("sigs_logo.png") %></figure></div>
  <div>
    <%= form_for :session, url: sign_in_path, html: {class: "enterForm"} do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "E-mail" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Senha" %>
        </div>
        <div class="actions flexContainer alignEnd">
          <%= link_to "Solicitar Cadastro", user_new_path %>
          <%= f.submit "Entrar", class: "btn btn-login btnEnter" %>
        </div>
      <% end %>
  </div>
</div>
